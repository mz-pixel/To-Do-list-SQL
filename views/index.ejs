<%- include('partials/header.ejs') %>
    <div class="container-sm"
        style="border-radius: 30px; background-color:blanchedalmond; padding: max(30px,1%); padding-bottom: max(30px,2%); padding-top:max(30px,2%); max-width: 540px; margin-top: 50px; margin-bottom: 50px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
        <h1>
            <%= type %>
        </h1>
        <% if (locals.list) { %>
            <% for( let i in list ) { %>
                <form action="/delete" method="post">
                    <div class="separate-div sep">
                        <input type="checkbox" name="checkbox" onChange="this.form.submit()" value="<%= list[i]._id %>">
                        <label class="text">
                            <%= list[i].task %>
                        </label>
                    </div>
                    <input type="hidden" name="hidden" value="<%= type %>">
                </form>
                <% } %>
                    <% } %>
                        <form class="form-outline my-2 my-md-0" action="/" method="POST">
                            <input class="form-control" type="text" name="input" placeholder="Enter task">
                            <button type="submit" class="btn btn-dark" name="something" value="<%= type %>"><i
                                    class="fa fa-check"></i>Submit</button>
                        </form>
    </div>
    <%- include('partials/footer.ejs') %>